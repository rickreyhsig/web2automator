<h1>Listing keyword_web2s</h1>

<%= link_to 'New Keyword web2', new_keyword_web2_path, class: 'btn btn-primary' %>
<br/>
<br/>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover table-condensed table-responsive">
      <tr>
        <th>Keyword</th>
        <th>Web2</th>
        <th>Link</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @keyword_web2s.each do |keyword_web2| %>
      <tr>
        <td><%= Keyword.find(keyword_web2.keyword_id).keyword %></td>
        <td><%= Web2.find(keyword_web2.web2_id).url %></td>
        <td><%= link_to keyword_web2.link, keyword_web2.link %></td>
        <td><%= link_to 'Details', keyword_web2 %></td>
        <td><%= link_to 'Edit', edit_keyword_web2_path(keyword_web2) %></td>
        <td><%= button_to 'Delete', keyword_web2, method: :delete, class: 'btn btn-danger', style: 'padding: 5px;' %></td>
      </tr>
    <% end %>
    </table>
</div>
