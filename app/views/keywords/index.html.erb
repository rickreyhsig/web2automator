
<h1>Listing keywords</h1>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover table-condensed table-responsive">
      <tr>
        <th>Keyword</th>
        <th>Link</th>
        <th>Email</th>
        <th>Password</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @keywords.each do |keyword| %>
      <tr>
        <td><%= keyword.keyword %></td>
        <td><%= keyword.link %></td>
        <td><%= keyword.email %></td>
        <td><%= keyword.password %></td>
        <!--<td><%#= link_to 'Create Profiles', create_profiles_path(id: keyword.id), class: 'rick_button' %></td>
        <td><%#= link_to 'Create Links', create_links_path(id: keyword.id), class: 'rick_button' %></td> -->
        <td><%= link_to 'Details', keyword %></td>
        <td><%= link_to 'Edit', edit_keyword_path(keyword) %></td>
        <td><%= button_to 'Delete', keyword, method: :delete, class: 'btn btn-danger', style: 'padding: 5px;' %></td>
      </tr>
    <% end %>
    </table>
</div>

<%= link_to 'New Keyword', new_keyword_path, class: 'btn btn-primary' %>
