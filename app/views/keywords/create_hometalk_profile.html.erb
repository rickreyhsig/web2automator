<%
require 'rubygems'
require 'watir'

browser = Watir::Browser.new
profiles = []
@keyword = Keyword.find(params[:keyword_id])

#HomeTalk
kw2 = KeywordWeb2.where(keyword_id: @keyword.id, web2_id: Web2.where("url LIKE ?", "%/hometalk.co%").first.id)
if kw2.length < 1
    browser.goto 'https://www.hometalk.com/'
    browser.link(text: 'Join Now').click
    browser.text_field(name: 'email').set @keyword.email
    browser.input(name: 'signup').click
    browser.text_field(name: 'username').set @keyword.anchor_text
    browser.text_field(name: 'password').set @keyword.password
    browser.text_field(name: 'zipcode').set @keyword.zipcode
    browser.file_field(name: 'image').set @keyword.logo_path
    browser.execute_script("alert(\"Please click Save.\")")
    sleep 5
    #browser.button(text: 'Save').click
    sleep 3
    browser.goto 'https://www.hometalk.com/my-account'
    browser.text_field(name: 'my_website').set @keyword.link
    browser.textarea(name: 'about_me').set @keyword.description
    browser.button(text: 'Save').click
    sleep 2
    browser.execute_script("alert(\"Please go to profile.\")")
    sleep 2
    # Save link
    profiles << browser.url
    keyword_web2 = KeywordWeb2.find_or_create_by_keyword_id_and_web2_id(keyword_id: @keyword.id, web2_id: Web2.where("url LIKE ?", "%/hometalk.co%").first.id)
    keyword_web2.update_attributes(link: browser.url)

    browser.close
    Watir::Wait.until(1800) { browser.text.include? 'Boom Shakalaka!' }

    browser.link(text: 'sign up with email').click
    browser.execute_script("window.scrollBy(0,1000)")
    browser.text_field(id: 'user_first_name').set @keyword.anchor_text.split[0]
    browser.text_field(id: 'user_last_name').set @keyword.anchor_text.split[1]
    browser.text_field(id: 'user_email').set @keyword.email
    browser.text_field(id: 'user_password').set @keyword.password
    browser.checkbox(id: 'user_user_setting_attributes_receive_newsletter').set
    browser.execute_script("alert(\"Please solve CAPTCHA and click Sign up.\")")
    sleep 21
    browser.execute_script("alert(\"Please verify accoutn before continuing.\")")
    sleep 3
    browser.close
else
   profiles << kw2.first.link
end
%>

