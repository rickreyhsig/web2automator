<% require 'uri' %>
<p id="notice"><%= notice %></p>

<h2>
  <b>Keyword:</b>
  <%= @keyword.keyword + " - Web2.0 count: "+ KeywordWeb2.where(keyword_id: @keyword.id).count.to_s %> 
</h2>

