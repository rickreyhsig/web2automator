require 'rubygems'
require 'watir'

browser = Watir::Browser.new
profiles = []

#Instructables
kw2 = KeywordWeb2.where(keyword_id: @keyword.id, web2_id: Web2.where("url LIKE ?", "%allnumis%").first.id)
